extends ../shared/loggedout/loggedoutlayout

block content 
  .col-sm-8.col-sm-offset-2
    form(method='POST' action='/auth/reset')
      h1.text-center
        span.fa.fa-lock
          |  !{displayappname}
      legend.text-center Forgot Password
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        p Enter your email address below and we will send you password reset instructions.
        label.control-label(for='email') Email
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
      .form-group
        button.btn.btn-primary(type='submit')
          i.fa.fa-key
          | Reset Password
        a.btn.btn-primary.pull-right(href='/auth/loginlocal')
         i.fa.fa-user
         | Back to Login
block background
  .jumbotron1
